<%= bootstrap_form_for(pharmacy) do |f| %>
  <% if pharmacy.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pharmacy.errors.count, "error") %> prohibited this pharmacy from being saved:</h2>

      <ul>
      <% pharmacy.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, label:"Полное название" %>

    <%= f.select :pharmacy_web_id, PharmacyWeb.all.collect{|p| [p.name,p.id]}, { label: "Аптечная сеть:" } %>
    <%= f.select :user_id, User.all.collect{|p| [p.email,p.id]}, { label: "Пользователь для доступа к заказам (email):" } %>

  </div>

  <%= f.select :region_id, Region.all.collect{|p| [p.name,p.id]}, { label: "Район, в котором находится аптека:" } %>


  <div class="actions">
    <%= f.submit "Обновить" %>
  </div>
<% end %>
